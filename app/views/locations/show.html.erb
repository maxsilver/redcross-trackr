<p id="notice"><%= notice %></p>

<h1><%= @location.name %></h1>

<%= link_to 'Edit', edit_location_path(@location) %>

<%= image_tag @location.picture_url(:thumbnail), :alt => @location.name %>

<div class="address">
  <%= @location.address %>
  <%= @location.address2 %>
  <%= @location.city %>, <%= @location.state.name %> <%= @location.zip %>
  <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@location.latitude}%2C#{@location.longitude}" %>
</div>

<div class="contact">
  <%= @location.contact_name %>
  <%= number_to_phone @location.contact_phone %>
</div>

<p>
  <b>National shelter system identifier:</b>
  <%= @location.national_shelter_system_identifier %>
</p>

<p>
  <b>Chapter:</b>
  <%= @location.chapter.name %>
</p>

<h2>Items</h2>
<%= link_to "Add", "#" %>
<%= link_to "Move", "#" %>
<%= link_to "Lend", "#" %>

<div class="items">
  <% @location.individual_items.each do |item| %>
    <div class="item">
      <%= image_tag item.picture_url(:thumbnail), :alt => item.name %>
      <%= item.name %>
      <%= item.quantity %>
      <%= check_box_tag :check %>
    </div>
  <% end %>
</div>

<h2>Vehicles</h2>
<%= link_to "Add", "#" %>
<%= link_to "Move", "#" %>
<%= link_to "Lend", "#" %>

<div class="containers">
  <% @location.containers.each do |container| %>
    <div class="item">
      <%= image_tag container.picture_url(:thumbnail), :alt => container.name %>
      <%= container.name %>
      <%= container.quantity %>
      <%= check_box_tag :check %>
    </div>
  <% end %>
</div>
