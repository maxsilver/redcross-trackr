<h1>Listing locations</h1>

<%= link_to 'New Location', new_location_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Address2</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Contact name</th>
    <th>Contact phone</th>
    <th>National shelter system identifier</th>
    <th>Chapter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= location.address %></td>
    <td><%= location.address2 %></td>
    <td><%= location.city %></td>
    <td><%= location.state.name %></td>
    <td><%= location.zip %></td>
    <td><%= location.contact_name %></td>
    <td><%= number_to_phone location.contact_phone %></td>
    <td><%= location.national_shelter_system_identifier %></td>
    <td><%= location.chapter.name %></td>
    <td><%= link_to 'Show', location %></td>
  </tr>
<% end %>
</table>
