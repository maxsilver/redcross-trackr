<h3>Choose a location:</h3>

<% @locations.each do |location| %>
  <%= link_to location, :class => "location #{cycle :even, :odd}", :data => { :lat => location.latitude, :lng => location.longitude } do %>
    <%= image_tag location.picture_url(:thumbnail), :alt => location.name %>
    
    <div class="name"><%= location.name %></div>
    <div class="chapter"><%= location.chapter.name %> Chapter</div>

    <div class="address">
      <div class="street"><%= location.address %></div>
      <div class="street2"><%= location.address2 %></div>
      <div class="city-sate-zip"><%= location.city %>, <%= location.state.name %> <%= location.zip %></div>
    </div>

    <% if location.contact? %>
      <div class="contact">
        <%= location.contact_name %> <%= number_to_phone location.contact_phone %>
      </div>
    <% end %>
  <% end %>
<% end %>

<div class="map"></div>

<% content_for :footer do %>
  <%= link_to 'Add Location', new_location_path, :class => "btn btn-large btn-primary" %>
<% end %>